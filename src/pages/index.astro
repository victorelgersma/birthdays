---
import Layout from '../layouts/Layout.astro'
import AddBirthday from '../components/AddBirthday.astro'
import { BirthdayList } from '../components/BirthdayList'
import { BackupControls } from '../components/BackupControls'
---

<Layout title="Birthday Tracker">
  <main class="container mx-auto px-4 py-8 flex flex-col min-h-screen">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-semibold">Birthday Sanity</h2>
      <AddBirthday />
    </div>

    <div class="flex-grow">
      <BirthdayList client:load />
    </div>

    <footer class="mt-auto pt-4 w-full flex justify-center">
      <a href="/backup" class="block text-blue-500 hover:underline"> backup </a>
    </footer>
  </main>
</Layout>
